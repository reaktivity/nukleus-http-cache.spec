property response1Date ${http_cache:date()} # sharedProperty
property response2Date ${http_cache:datePlus(5)} # sharedProperty
property etag ${http_cache:strongEtag()} #shared
property etag2 ${http_cache:strongEtag()} #shared

accept await ROUTED_PROXY
        "nukleus://streams/http-cache#0"
        option nukleus:window 8192
        option nukleus:transmission "half-duplex"
accepted

read nukleus:begin.ext ${http:beginEx()
                             .typeId(nukleus:id("http"))
                             .header(":scheme", "http")
                             .header(":method", "GET")
                             .header(":path", "/data")
                             .header(":authority", "localhost:8080")
                             .build()}

connected

read closed

write nukleus:begin.ext ${http:beginEx()
                              .typeId(nukleus:id("http"))
                              .header(":status", "200")
                              .header("content-length", "11")
                              .header("date", response1Date)
                              .header("surrogate-control", "max-age=1+100")
                              .header("etag", etag)
                              .header("cache-control", "stale-while-revalidate=100")
                              .build()}

write flush

write "response #1"

write nukleus:data.ext ${http:dataEx()
                             .typeId(nukleus:id("http"))
                             .promise(":scheme", "http")
                             .promise(":method", "GET")
                             .promise(":path", "/data")
                             .promise(":authority", "localhost:8080")
                             .promise("cache-control", "no-cache")
                             .promise("prefer", "wait=100")
                             .promise("if-none-match", etag)
                             .build()}

write flush

write close

write notify CACHE_UPDATE_RECEIVED #Assumed

accepted

read nukleus:begin.ext ${http:beginEx()
                             .typeId(nukleus:id("http"))
                             .header(":scheme", "http")
                             .header(":method", "GET")
                             .header(":path", "/data")
                             .header(":authority", "localhost:8080")
                             .build()}

connected

read closed

write nukleus:begin.ext ${http:beginEx()
                              .typeId(nukleus:id("http"))
                              .header(":status", "200")
                              .header("content-length", "11")
                              .header("date", response3Date)
                              .header("surrogate-control", "max-age=100+100")
                              .header("etag", etag3)
                              .header("cache-control", "stale-while-revalidate=100")
                              .build()}

write "response #3"

write nukleus:data.ext ${http:dataEx()
                            .typeId(nukleus:id("http"))
                            .promise(":scheme", "http")
                            .promise(":method", "GET")
                            .promise(":path", "/data")
                            .promise(":authority", "localhost:8080")
                            .promise("cache-control", "no-cache")
                            .promise("prefer", "wait=100")
                            .promise("if-none-match", etag3)
                            .build()}

write flush

write close
