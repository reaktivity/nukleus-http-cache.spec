property response1Date ${http_cache:date()} # sharedProperty
property response2Date ${http_cache:datePlus(5)} # sharedProperty
property etag1 ${http_cache:fixedStrongEtag("99999a0")}
property etag2 ${http_cache:fixedStrongEtag("99999a2")}

accept await ROUTED_PROXY
        "nukleus://streams/http-cache#0"
        option nukleus:window 8192
        option nukleus:transmission "half-duplex"
        option nukleus:authorization 0x0001_000000_000000L
accepted

read nukleus:begin.ext ${http:beginEx()
                              .typeId(nukleus:id("http"))
                              .header(":scheme", "http")
                              .header("x-protocol-stack", "emulated")
                              .header(":method", "GET")
                              .header(":path", "/data")
                              .header(":authority", "localhost:8080")
                              .build()}

connected

read closed

write nukleus:begin.ext ${http:beginEx()
                              .typeId(nukleus:id("http"))
                              .header(":status", "200")
                              .header("content-length", "11")
                              .header("date", response1Date)
                              .header("surrogate-control", "max-age=1+100, x-protected")
                              .header("cache-control", "stale-while-revalidate=100")
                              .build()}

write flush

read "response #1"

write nukleus:data.ext ${http:dataEx()
                             .typeId(nukleus:id("http"))
                             .promise(":scheme", "http")
                             .promise(":method", "GET")
                             .promise(":path", "/data")
                             .promise(":authority", "localhost:8080")
                             .promise("cache-control", "no-cache")
                             .promise("prefer", "wait=100")
                             .promise("if-none-match", etag1)
                             .build()}
write flush

write nukleus:end.ext ${http:endEx()
                            .typeId(nukleus:id("http"))
                            .header("etag", etag1)
                            .build()}

write close

write notify CACHE_UPDATED #Assumed

accepted

read nukleus:begin.ext ${http:beginEx()
                              .typeId(nukleus:id("http"))
                              .header(":scheme", "http")
                              .header("x-protocol-stack", "emulated")
                              .header(":method", "GET")
                              .header(":path", "/data")
                              .header(":authority", "localhost:8080")
                              .build()}

connected

read closed

write nukleus:begin.ext ${http:beginEx()
                              .typeId(nukleus:id("http"))
                              .header(":status", "200")
                              .header("content-length", "11")
                              .header("date", response2Date)
                              .header("surrogate-control", "max-age=100+100")
                              .header("cache-control", "stale-while-revalidate=100")
                              .header("etag", etag2)
                              .build()}

read nukleus:data.ext ${http:dataEx()
                            .typeId(nukleus:id("http"))
                            .promise(":scheme", "http")
                            .promise(":method", "GET")
                            .promise(":path", "/data")
                            .promise(":authority", "localhost:8080")
                            .promise("cache-control", "no-cache")
                            .promise("prefer", "wait=100")
                            .promise("if-none-match", etag2)
                            .build()}
write flush

write "response #2"

write close
