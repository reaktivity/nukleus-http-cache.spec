property response1Date ${http_cache:date()} # sharedProperty
property response2Date ${http_cache:datePlus(5)} # sharedProperty
property etag ${http_cache:strongEtag()} # sharedProperty

accept await ROUTED_PROXY
        "nukleus://streams/http-cache#0"
        option nukleus:window 8192
        option nukleus:transmission "half-duplex"
accepted

read nukleus:begin.ext ${http:beginEx()
                             .typeId(nukleus:id("http"))
                             .header(":scheme", "http")
                             .header(":method", "GET")
                             .header(":path", "/data")
                             .header(":authority", "localhost:8080")
                             .header("prefer", "wait=5")
                             .build()}

connected

read closed

write nukleus:begin.ext ${http:beginEx()
                              .typeId(nukleus:id("http"))
                              .header(":status", "200")
                              .header("content-length", "11")
                              .header("date", response1Date)
                              .header("surrogate-control", "max-age=4")
                              .header("cache-control", "max-age=4")
                              .header("etag", etag)
                              .header("preference-applied", "wait=5")
                              .header("access-control-expose-headers", "preference-applied")
                             .header("access-control-expose-headers", "etag")
                              .build()}

write "response #1"

write close

accepted

read nukleus:begin.ext ${http:beginEx()
                             .typeId(nukleus:id("http"))
                             .header(":scheme", "http")
                             .header(":method", "GET")
                             .header(":path", "/data")
                             .header(":authority", "localhost:8080")
                             .header("cache-control", "max-age=0")
                             .header("prefer", "wait=5")
                             .header("if-none-match", etag)
                             .build()}

connected

read closed

write nukleus:begin.ext ${http:beginEx()
                              .typeId(nukleus:id("http"))
                              .header(":status", "304")
                              .header("etag", etag)
                              .header("preference-applied", "wait=5")
                              .header("access-control-expose-headers", "preference-applied")
                             .header("access-control-expose-headers", "etag")
                              .build()}
write close
