property response1Date ${http_cache:date()} # sharedProperty
property response2Date ${http_cache:datePlus(3)} # sharedProperty
property response3Date ${http_cache:datePlus(5)} # sharedProperty

accept await ROUTED_PROXY
        "nukleus://streams/http-cache#0"
        option nukleus:window 8192
        option nukleus:transmission "half-duplex"
        option nukleus:authorization 0x0001_000000_000000L
accepted

read nukleus:begin.ext ${http:beginEx()
                             .typeId(nukleus:id("http"))
                             .header(":scheme", "http")
                             .header(":method", "GET")
                             .header(":path", "/data")
                             .header(":authority", "localhost:8080")
                             .header("prefer", "wait=5")
                             .header("authorization", "FIRST_TOKEN")
                             .build()}

connected

read closed

write nukleus:begin.ext ${http:beginEx()
                             .typeId(nukleus:id("http"))
                             .header(":status", "200")
                             .header("content-length", "11")
                             .header("date", response1Date)
                             .header("cache-control", "max-age=100")
                             .header("etag", "first")
                             .header("preference-applied", "wait=5")
                             .header("access-control-expose-headers", "preference-applied, etag")
                             .build()}

write "response #1"

write close

accepted

read nukleus:begin.ext ${http:beginEx()
                             .typeId(nukleus:id("http"))
                             .header(":scheme", "http")
                             .header(":method", "GET")
                             .header(":path", "/data")
                             .header(":authority", "localhost:8080")
                             .header("prefer", "wait=5")
                             .header("cache-control", "max-age=0")
                             .header("if-none-match", "first")
                             .header("authorization", "SECOND_TOKEN")
                             .build()}

connected

read closed

write nukleus:begin.ext ${http:beginEx()
                             .typeId(nukleus:id("http"))
                             .header(":status", "200")
                             .header("content-length", "11")
                             .header("date", response3Date)
                             .header("cache-control", "max-age=100")
                             .header("etag", "second")
                             .header("preference-applied", "wait=5")
                             .header("access-control-expose-headers", "preference-applied, etag")
                             .build()}


write "response #2"

write close

write notify SECOND_RESPONSE_SENT

accepted

read nukleus:begin.ext ${http:beginEx()
                             .typeId(nukleus:id("http"))
                             .header(":scheme", "http")
                             .header(":method", "GET")
                             .header(":path", "/data")
                             .header(":authority", "localhost:8080")
                             .header("prefer", "wait=5")
                             .header("authorization", "THIRD_TOKEN")
                             .build()}

connected

read closed

write nukleus:begin.ext ${http:beginEx()
                             .typeId(nukleus:id("http"))
                             .header(":status", "200")
                             .header("content-length", "11")
                             .header("date", response3Date)
                             .header("cache-control", "max-age=100")
                             .header("etag", "second")
                             .header("preference-applied", "wait=5")
                             .header("access-control-expose-headers", "preference-applied, etag")
                             .build()}

write "response #2"

write close

