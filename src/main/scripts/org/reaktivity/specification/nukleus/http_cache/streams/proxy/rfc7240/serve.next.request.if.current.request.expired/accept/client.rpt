property response1Date ${http_cache:date()} # sharedProperty
property response3Date ${http_cache:datePlus(2)} # sharedProperty

connect await ROUTED_PROXY
        "nukleus://streams/http-cache#0"
        option nukleus:window 8192
        option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${http:beginEx()
                              .typeId(nukleus:id("http"))
                              .header(":scheme", "http")
                              .header(":method", "GET")
                              .header(":path", "/data")
                              .header(":authority", "localhost:8080")
                              .header("prefer", "wait=2")
                              .build()}
connected

write close

read nukleus:begin.ext ${http:beginEx()
                             .typeId(nukleus:id("http"))
                             .header(":status", "200")
                             .header("content-length", "11")
                             .header("date", response1Date)
                             .header("cache-control", "max-age=1")
                             .header("etag", "first")
                             .header("preference-applied", "wait=2")
                             .header("access-control-expose-headers", "preference-applied, etag")
                             .build()}

read "response #1"

read closed

read notify FIRST_REQUEST_COMPLETED

connect await FIRST_REQUEST_COMPLETED
        "nukleus://streams/http-cache#0"
        option nukleus:window 8192
        option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${http:beginEx()
                              .typeId(nukleus:id("http"))
                              .header(":scheme", "http")
                              .header(":method", "GET")
                              .header(":path", "/data")
                              .header(":authority", "localhost:8080")
                              .header("prefer", "wait=2")
                              .header("cache-control", "max-age=0")
                              .header("if-none-match", "first")
                              .build()}
connected

write close

write notify SECOND_REQUEST_SENT
read await CACHED_RESPONSE_EXPIRED
read await THIRD_REQUEST_SENT

read nukleus:begin.ext ${http:beginEx()
                             .typeId(nukleus:id("http"))
                             .header(":status", "304")
                             .header("etag", "first")
                             .header("preference-applied", "wait=2")
                             .header("access-control-expose-headers", "preference-applied, etag")
                             .build()}

read closed

connect await CACHED_RESPONSE_EXPIRED
        "nukleus://streams/http-cache#0"
        option nukleus:window 8192
        option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${http:beginEx()
                              .typeId(nukleus:id("http"))
                              .header(":scheme", "http")
                              .header(":method", "GET")
                              .header(":path", "/data")
                              .header(":authority", "localhost:8080")
                              .header("prefer", "wait=2")
                              .build()}
connected

write close

read notify THIRD_REQUEST_SENT

read nukleus:begin.ext ${http:beginEx()
                             .typeId(nukleus:id("http"))
                             .header(":status", "200")
                             .header("content-length", "11")
                             .header("date", response3Date)
                             .header("cache-control", "max-age=10")
                             .header("etag", "first")
                             .header("preference-applied", "wait=2")
                             .header("access-control-expose-headers", "preference-applied, etag")
                             .build()}


read "response #1"

read closed
