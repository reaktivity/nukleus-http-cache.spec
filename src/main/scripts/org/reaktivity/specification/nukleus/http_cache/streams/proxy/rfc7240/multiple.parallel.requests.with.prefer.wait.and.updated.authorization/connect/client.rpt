property response1Date ${http_cache:date()} # sharedProperty
property response2Date ${http_cache:datePlus(3)} # sharedProperty
property response3Date ${http_cache:datePlus(5)} # sharedProperty

connect await ROUTED_PROXY
        "nukleus://streams/target#0"
        option nukleus:window 8192
        option nukleus:transmission "half-duplex"


write nukleus:begin.ext ${http:beginEx()
                              .typeId(nukleus:id("http"))
                              .header(":scheme", "http")
                              .header(":method", "GET")
                              .header(":path", "/data")
                              .header(":authority", "localhost:8080")
                              .header("prefer", "wait=5")
                              .header("authorization", "FIRST_TOKEN")
                              .build()}

connected

write close

read nukleus:begin.ext ${http:beginEx()
                             .typeId(nukleus:id("http"))
                              .header(":status", "200")
                              .header("content-length", "11")
                              .header("date", response1Date)
                              .header("cache-control", "max-age=100")
                              .header("etag", "first")
                              .header("retry-after", "1")
                              .build()}

read "response #1"

read closed

read notify FIRST_REQUEST_COMPLETED

connect await FIRST_REQUEST_COMPLETED
        "nukleus://streams/target#0"
        option nukleus:window 8192
        option nukleus:transmission "half-duplex"


write nukleus:begin.ext ${http:beginEx()
                              .typeId(nukleus:id("http"))
                              .header(":scheme", "http")
                              .header(":method", "GET")
                              .header(":path", "/data")
                              .header(":authority", "localhost:8080")
                              .header("prefer", "wait=5")
                              .header("cache-control", "max-age=0")
                              .header("authorization", "SECOND_TOKEN")
                              .header("if-none-match", "first")
                              .build()}

connected

write close

read nukleus:begin.ext ${http:beginEx()
                             .typeId(nukleus:id("http"))
                             .header(":status", "304")
                             .header("etag", "first")
                             .header("date", response2Date)
                             .header("retry-after", "1")
                             .build()}


read closed

read notify SECOND_REQUEST_RECEIVED

connect await SECOND_REQUEST_RECEIVED
        "nukleus://streams/target#0"
        option nukleus:window 8192
        option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${http:beginEx()
                              .typeId(nukleus:id("http"))
                              .header(":scheme", "http")
                              .header(":method", "GET")
                              .header(":path", "/data")
                              .header(":authority", "localhost:8080")
                              .header("prefer", "wait=5")
                              .header("authorization", "THIRD_TOKEN")
                              .build()}
connected

write close

read nukleus:begin.ext ${http:beginEx()
                              .typeId(nukleus:id("http"))
                              .header(":status", "200")
                              .header("content-length", "11")
                              .header("date", response3Date)
                              .header("cache-control", "max-age=100")
                              .header("etag", "second")
                              .header("retry-after", "1")
                              .build()}

read "response #2"

read closed