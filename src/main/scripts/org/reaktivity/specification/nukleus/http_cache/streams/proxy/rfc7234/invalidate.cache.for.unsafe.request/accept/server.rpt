property response1Date ${http_cache:date()} # sharedProperty
property response2Date ${http_cache:datePlus(1)} # sharedProperty
property etag1 ${http_cache:fixedStrongEtag("99999>|<1")}
property etag2 ${http_cache:fixedStrongEtag("99999>|<2")}

accept await ROUTED_PROXY
        "nukleus://streams/http-cache#0"
        option nukleus:window 8192
        option nukleus:transmission "half-duplex"
accepted

read nukleus:begin.ext ${http:beginEx()
                             .typeId(nukleus:id("http"))
                             .header(":scheme", "http")
                             .header(":method", "GET")
                             .header(":path", "/path")
                             .header(":authority", "localhost:8080")
                             .build()}

connected

read closed


write nukleus:begin.ext ${http:beginEx()
                              .typeId(nukleus:id("http"))
                              .header(":status", "200")
                              .header("content-length", "11")
                              .header("cache-control", "max-age=30")
                              .header("date", response1Date)
                              .header("etag", etag1)
                              .build()}

write "hello world"

write close

accepted

read nukleus:begin.ext ${http:beginEx()
                             .typeId(nukleus:id("http"))
                             .header(":scheme", "http")
                             .header(":method", "POST")
                             .header(":path", "/path")
                             .header(":authority", "localhost:8080")
                             .header("content-length", "11")
                             .build()}

connected

read "hello world"

read closed

write nukleus:begin.ext ${http:beginEx()
                              .typeId(nukleus:id("http"))
                              .header(":status", "200")
                              .build()}

write close

accepted

read nukleus:begin.ext ${http:beginEx()
                             .typeId(nukleus:id("http"))
                             .header(":scheme", "http")
                             .header(":method", "GET")
                             .header(":path", "/path")
                             .header(":authority", "localhost:8080")
                             .build()}

connected

read closed


write nukleus:begin.ext ${http:beginEx()
                              .typeId(nukleus:id("http"))
                              .header(":status", "200")
                              .header("content-length", "12")
                              .header("cache-control", "max-age=30")
                              .header("date", response2Date)
                              .header("etag", etag2)
                              .build()}

write "hello world2"

write close
