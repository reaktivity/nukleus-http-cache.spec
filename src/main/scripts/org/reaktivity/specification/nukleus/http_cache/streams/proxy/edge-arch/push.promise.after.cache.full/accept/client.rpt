property date ${http_cache:date()}
property etag ${http_cache:strongEtag()} #shared

# Populate Cache

connect await ROUTED_PROXY
        "nukleus://streams/http-cache#0"
        option nukleus:window 8192
        option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${http:beginEx()
                              .typeId(nukleus:id("http"))
                              .header(":scheme", "http")
                              .header(":method", "GET")
                              .header(":path", "/path")
                              .header(":authority", "localhost:8080")
                              .header("user-agent", "client 1")
                              .build()}

connected

write close

read nukleus:begin.ext ${http:beginEx()
                             .typeId(nukleus:id("http"))
                             .header(":status", "200")
                             .header("content-length", "11")
                             .header("date", date)
                             .header("surrogate-control", "max-age=1+10")
                             .header("etag", etag)
                             .header("cache-control", "stale-while-revalidate=10")
                             .build()}

read nukleus:data.ext ${http:dataEx()
                            .typeId(nukleus:id("http"))
                            .promise(":scheme", "http")
                            .promise(":method", "GET")
                            .promise(":path", "/path")
                            .promise(":authority", "localhost:8080")
                            .promise("cache-control", "no-cache")
                            .promise("prefer", "wait=10")
                            .promise("if-none-match", etag)
                            .build()}

read "hello world"

read closed

read notify REQUEST1_COMPLETE

# Poll request in response to push promise
connect await REQUEST1_COMPLETE
        "nukleus://streams/http-cache#0"
        option nukleus:window 8192
        option nukleus:transmission "simplex"

write nukleus:begin.ext ${http:beginEx()
                              .typeId(nukleus:id("http"))
                              .header(":scheme", "http")
                              .header(":method", "GET")
                              .header(":path", "/path")
                              .header(":authority", "localhost:8080")
                              .header("user-agent", "client 1")
                              .header("cache-control", "no-cache")
                              .header("prefer", "wait=10")
                              .header("if-none-match", etag)
                              .build()}

connected

write close
